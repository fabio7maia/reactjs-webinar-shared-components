{
  "name": "@reactjs-webinar/scaffold-package",
  "license": "MIT",
  "author": {
    "name": "FÃ¡bio Maia"
  },
  "version": "0.1.0",
  "main": "dist/index.js",
  "module": "src/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "node scripts/pre-build.js && tsc --project tsconfig.build.json",
    "pub": "yarn run build && yarn publish --registry=https://registry.npmjs.org --access public",
    "test": "react-scripts test \"--watchAll=false\" \"--forceExit\"",
    "test:coverage": "react-scripts test \"--coverage\" \"--watchAll=false\" \"--silent\" \"--forceExit\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/__stories__/**"
    ]
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2"
  }
}
